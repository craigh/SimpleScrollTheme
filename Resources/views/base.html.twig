<!DOCTYPE html>
<html lang="{{ app.request.locale }}" dir="auto">

<head>
    {% block headcontent %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="{{ pagevars.meta.description|default(siteSlogan()) }}" />
    <meta name="author" content="{{ siteName() }}" />
    <meta name="robots" content="index,follow,noodp" />
    <meta name="rating" content="General" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!--[if IE]><meta http-equiv="imagetoolbar" content="no" /><![endif]-->

    <title>{{ pagevars.title }}</title>

    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet">
    {{ siteBranding() }}
    {% endblock %}
</head>

{% block bodydeclaration %}<body id="page-top">{% endblock %}

{% block leftnav %}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
    <a class="navbar-brand js-scroll-trigger" href="#page-top">
        <span class="d-block d-lg-none">{{ pagevars.title }}</span>
        <span class="d-none d-lg-block">
        <img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="{{ zasset('@CraighSimpleScrollTheme:images/logo.png') }}" alt="">
      </span>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        {% block leftnavlinks %}
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('home') }}">{% trans %}Home{% endtrans %}</a>
            </li>
            {{ include('@CraighSimpleScrollTheme/adminlinks.html.twig') }}
        </ul>
        {% endblock leftnavlinks %}
        {{ showblockposition('bottomnav') }}
    </div>
</nav>
{% endblock %}

{% block maincontent %}
<div class="container-fluid p-0">
    <div class="mx-5 mt-5">
        <h2 class="mb-5">{{ pagevars.title }}</h2>

        {{ showflashes() }}
        {{ maincontent|raw }}

    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ pageAddAsset('javascript', zasset('@CraighSimpleScrollTheme:js/jquery-easing/jquery.easing.min.js')) }}
{{ pageAddAsset('javascript', zasset('@CraighSimpleScrollTheme:js/resume.js')) }}
{% endblock %}

</body>

</html>
