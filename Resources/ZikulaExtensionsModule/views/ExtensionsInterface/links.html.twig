{% if extensionMenu|default %}
<nav class="navbar navbar-expand-lg navbar-light bg-light py-0">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#extensionMenuNav" aria-controls="extensionMenuNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="fas fa-bars"></span>
    </button>
    <div class="collapse navbar-collapse" id="extensionMenuNav">
        {# set the class as navbar-nav so extensions menu is a navbar instead of a nav and therefore responsive #}
        {% do extensionMenu.setChildrenAttribute('class', 'navbar-nav') %}
        {{ knp_menu_render(extensionMenu, {template: '@ZikulaMenuModule/Override/bootstrap_fontawesome.html.twig'}) }}
    </div>
</nav>
{% endif %}
